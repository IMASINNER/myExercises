<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cyzc.test.Dao.StudentMapper">
   <resultMap id="BaseResultMap" type="com.cyzc.test.Entity.Student">
       <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="Sname" property="Sname" jdbcType="VARCHAR"/>
       <result column="Ssex" property="Ssex" jdbcType="TINYINT"/>
       <result column="Sclass" property="Sclass" jdbcType="TINYINT"/>
   </resultMap>
    <sql id="AllColunmData">
        id,Sname,Ssex,Sclass
    </sql>

    <select id="getStudent" resultMap="BaseResultMap">
        select
        *
        from
        student
        where
        id=#{id,jdbcType=INTEGER}
    </select>

    <insert id="addStudent" parameterType="com.cyzc.test.Entity.Student">
        insert into
        student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id !=null">
                id,
            </if>
            <if test="Ssex != null">
                Ssex,
            </if>
            <if test="Sname !=null">
                Sname,
            </if>
            <if test="Sclass != null">
                Sclass
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id !=null">
            #{id,jdbcType=INTEGER},
        </if>
            <if test="Ssex !=null">
                #{Ssex,jdbcType=INTEGER},
            </if>
            <if test="Sname !=null">
                #{Sname,jdbcType=VARCHAR},
            </if>
            <if test="Sname !=null">
                #{Sclass,jdbcType=INTEGER}
            </if>
        </trim>

    </insert>

    <delete id="deleteStudentById" parameterType="java.lang.Long">
        delete
        from
        student
        where
        id=#{id,jdbcType=BIGINT}
    </delete>

    <update id="updateStudentById" parameterType="com.cyzc.test.Entity.Student">
        update
        student
        <set>
            <if test="Sname !=null">
                Sname=#{Sname,jdbcType=VARCHAR},
            </if>
            <if test="Ssex !=null">
                Ssex=#{Ssex,jdbcType=INTEGER},
            </if>
            <if test="Sclass !=null">
                Sclass=#{Sclass,jdbcType=INTEGER}
            </if>
        </set>
        WHERE id=#{id,jdbcType=INTEGER}
    </update>

</mapper>